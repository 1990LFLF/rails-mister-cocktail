<div class="container avoid-nav-overlap">
  <div class="row justify-content-center">
      <div class="col-12 col-lg-6 cocktail-details">
        <% if @cocktail.photo.attached?%>
          <%= cl_image_tag @cocktail.photo.key %>
        <% else %>
          <%= image_tag "", alt: "no image uploaded" %>
        <% end %>
      </div>

      <div class="col-12 col-lg-6 mt-2 cocktail-info">
        <h1><%= @cocktail.name %> </h1>
        <p>Description lorem ipsum wow. so good. must drink. - TO-DO</p>
        <h2>Ingredients</h2>
        <table class ="table">
          <thead>
            <th>Quantity</th>
            <th>Ingredient</th>
            <th>Remove</th>
          </thead>
          <tbody>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td> <%= "#{dose.description}" %></td>
                <td> <%= "#{dose.ingredient.name}" %></td>
                <td>   <%= link_to dose_path(dose) ,:method => :delete, data: {:confirm => "You sure?" } do %>
                <i class="fas fa-trash-alt"></i>
                <% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to ' Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
      </div>
  </div>
</div>
