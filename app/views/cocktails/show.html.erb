<div class="container">
  <h1><%= @cocktail.name %> </h1>
  <% @cocktail.doses.each do |dose| %>
  <p>
   <%= "#{dose.description} | #{dose.ingredient.name}"  %>
    <%= link_to dose_path(dose) ,:method => :delete, data: {:confirm => "You sure?" } do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </p>
  <% end %>

  <p>
    <%= link_to ' Add a new dose', new_cocktail_dose_path(@cocktail), class: "fas fa-plus"%>
  </p>

  <p>
    <%= link_to ' Back to Cocktails', cocktails_path, class: "fas fa-undo-alt"  %>
  </p>

</div>
