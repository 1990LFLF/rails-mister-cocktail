<div class="container">

  <div class="card" style="width: 40%;">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
      <h1><%= @cocktail.name %> </h1>
      <p> <em><strong>Doses</strong></em> </p>
      <% @cocktail.doses.each do |dose| %>
      <p>
       <%= "#{dose.description} | #{dose.ingredient.name}"  %>
        <%= link_to dose_path(dose) ,:method => :delete, data: {:confirm => "You sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      </p>
      <% end %>
      <%= link_to ' Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
    </div>
  </div>





</div>
