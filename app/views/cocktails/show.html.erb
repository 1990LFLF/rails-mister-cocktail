<div class="container avoid-nav-overlap">
  <div class="row justify-content-center">
      <div class="col-lg-6 cocktail-details">
        <% if @cocktail.photo.attached?%>
          <%= cl_image_tag @cocktail.photo.key %>
        <% else %>
          <%= image_tag "default.jpeg", alt: "alttext" %>
        <% end %>
      </div>

      <div class="col-lg-6 mt-2 cocktail-info">
        <h1><%= @cocktail.name %> </h1>
        <p>Description lorem ipsum very good must drink - TO-DO</p>
        <h2>Ingredients</h2>
        <% @cocktail.doses.each do |dose| %>
        <p>
         <%= "#{dose.description} | #{dose.ingredient.name}"  %>
          <%= link_to dose_path(dose) ,:method => :delete, data: {:confirm => "You sure?" } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </p>
        <% end %>
        <%= link_to ' Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
      </div>
  </div>
</div>
